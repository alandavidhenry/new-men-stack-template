<% layout('layouts/boilerplate') %> 
<h1>The index page</h1>
<p><a href="/">Click here</a> to go to to the home page.</p>

<% for( let thing of things ) { %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= thing.item1 %> <%= thing.item2 %> <%= thing.item3 %></h5>
                <a class="btn btn-primary" href="/things/<%=thing._id%>">View</a>
            </div>
        </div>
    </div>
</div>
<% } %>